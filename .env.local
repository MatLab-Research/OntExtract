# OntExtract Local Development Configuration
# Copy this file to .env for local development

# Flask Configuration
SECRET_KEY=dev-local-secret-key-for-ontextract
FLASK_ENV=development
FLASK_DEBUG=1

# Local PostgreSQL Database Configuration
DATABASE_URL=postgresql://ontextract:ontextract_dev_password@localhost:5432/ontextract
SQLALCHEMY_DATABASE_URI=postgresql://ontextract:ontextract_dev_password@localhost:5432/ontextract

# File Upload Configuration
ONTEXTRACT_UPLOAD_FOLDER=uploads
MAX_CONTENT_LENGTH=16777216
ALLOWED_EXTENSIONS=txt,pdf,docx,html,md,json

# LLM Provider Configuration (Optional - add your API keys)
# ANTHROPIC_API_KEY=your-anthropic-api-key-here
# OPENAI_API_KEY=your-openai-api-key-here
DEFAULT_LLM_PROVIDER=anthropic

# Google Cloud Configuration (Optional)
# GOOGLE_APPLICATION_CREDENTIALS=/path/to/credentials.json
# GOOGLE_PROJECT_ID=your-project-id
GOOGLE_LOCATION=us-central1
GOOGLE_LANGUAGE_SERVICE_ENABLED=false
GOOGLE_TRANSLATE_SERVICE_ENABLED=false

# Processing Configuration
ENABLE_BATCH_PROCESSING=true
MAX_CONCURRENT_JOBS=3

# RAG Configuration
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
VECTOR_DIMENSION=384
SIMILARITY_THRESHOLD=0.7

# Redis Configuration (Optional - will use in-memory fallback if not available)
# REDIS_URL=redis://localhost:6379/0

# Logging Configuration
LOG_LEVEL=DEBUG
LOG_FILE=logs/ontextract.log

# WTF Configuration
WTF_CSRF_ENABLED=true

# Shared Services Configuration
EMBEDDING_PROVIDER_PRIORITY=local,openai,claude
LLM_PROVIDER_PRIORITY=openai,claude
LOCAL_EMBEDDING_MODEL=all-MiniLM-L6-v2
