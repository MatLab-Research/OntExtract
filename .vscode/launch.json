{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Flask: Run OntExtract (run.py debug)",
      "type": "debugpy",
      "request": "launch",
      "python": "${workspaceFolder}/../venv/bin/python",
      "program": "${workspaceFolder}/run.py",
      "console": "integratedTerminal",
      "justMyCode": true,
      "envFile": "${workspaceFolder}/.env",
      "env": {
        "FLASK_ENV": "development",
        "FLASK_DEBUG": "1",
        "PYTHONPATH": "${workspaceFolder}:${workspaceFolder}/..",
        "USE_ONTSERVE": "true",
        "ONTSERVE_URL": "http://localhost:8083"
      },
      "args": [],
      "cwd": "${workspaceFolder}",
      "purpose": ["debug-in-terminal"],
      "jinja": true
    },
    {
      "name": "Flask: Debug via module (-m flask)",
      "type": "debugpy",
      "request": "launch",
      "python": "${workspaceFolder}/../venv/bin/python",
      "module": "flask",
      "envFile": "${workspaceFolder}/.env",
      "env": {
        "FLASK_APP": "run:app",
        "FLASK_ENV": "development",
        "FLASK_DEBUG": "1",
        "PYTHONPATH": "${workspaceFolder}:${workspaceFolder}/..",
        "USE_ONTSERVE": "true",
        "ONTSERVE_URL": "http://localhost:8083"
      },
      "args": [
        "run",
        "--no-debugger",
        "--no-reload",
        "--port",
        "5000",
        "--host",
        "0.0.0.0"
      ],
      "jinja": true,
      "cwd": "${workspaceFolder}"
    },
    {
      "name": "Flask: Attach to running debugpy",
      "type": "debugpy",
      "request": "attach",
      "connect": {
        "host": "localhost",
        "port": 5678
      },
      "justMyCode": true
    },
    {
      "name": "Flask: Run in Docker (attach)",
      "type": "debugpy",
      "request": "attach",
      "connect": {
        "host": "localhost",
        "port": 5678
      },
      "justMyCode": true,
      "preLaunchTask": "Start web container with debugpy"
    },
    {
      "name": "Python: Unit tests (pytest)",
      "type": "debugpy",
      "request": "launch",
      "module": "pytest",
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "python": "${workspaceFolder}/../venv/bin/python",
      "env": {
        "PYTHONPATH": "${workspaceFolder}:${workspaceFolder}/.."
      }
    }
  ]
}