# OntExtract Configuration
# Copy this file to .env and fill in your values

# Flask Configuration
SECRET_KEY=your-secret-key-here
FLASK_ENV=development
FLASK_DEBUG=1

# PostgreSQL Database Configuration
DATABASE_URL=postgresql://postgres:your-password@localhost:5432/ontextract_db
SQLALCHEMY_DATABASE_URI=postgresql://postgres:your-password@localhost:5432/ontextract_db
POSTGRES_DB=ontextract_db
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-password

# File Upload Configuration
ONTEXTRACT_UPLOAD_FOLDER=uploads
MAX_CONTENT_LENGTH=16777216
ALLOWED_EXTENSIONS=txt,pdf,docx,html,md,json

# LLM API Keys (at least one required for LLM orchestration)
OPENAI_API_KEY=sk-your-openai-key
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key

# LLM Settings
DEFAULT_LLM_PROVIDER=anthropic
CLAUDE_API_VERSION=2023-06-01
CLAUDE_DEFAULT_MODEL=claude-sonnet-4-20250514
CLAUDE_FAST_MODEL=claude-sonnet-4-20250514
CLAUDE_POWERFUL_MODEL=claude-opus-4-1-20250805

# LLM Orchestration Error Handling
LLM_TIMEOUT_SECONDS=300
LLM_MAX_RETRIES=3
LLM_RETRY_INITIAL_DELAY=1
LLM_RETRY_MAX_DELAY=60
LLM_RETRY_EXPONENTIAL_BASE=2

# Google Cloud Configuration (Optional)
# GOOGLE_APPLICATION_CREDENTIALS=/path/to/credentials.json
# GOOGLE_PROJECT_ID=your-project-id
GOOGLE_LOCATION=us-central1
GOOGLE_LANGUAGE_SERVICE_ENABLED=false
GOOGLE_TRANSLATE_SERVICE_ENABLED=false
# GOOGLE_GEMINI_API_KEY=your-gemini-key

# Oxford English Dictionary API (Optional)
OED_USE_API=false
# OED_APP_ID=your-oed-app-id
# OED_ACCESS_KEY=your-oed-access-key

# Redis Configuration (for Celery)
REDIS_URL=redis://localhost:6379/0

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/ontextract.log
